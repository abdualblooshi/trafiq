<!-- views/index.ejs -->
<div class="flex-1 min-h-screen bg-slate-900 p-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Traffic Incidents Dashboard</h1>
      <p class="text-gray-400">Real-time monitoring and analysis of traffic incidents in Dubai</p>
    </div>

    <!-- Main Grid Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-4">
      <!-- Key Metrics Cards -->
      <div class="lg:col-span-3 grid grid-cols-2 lg:grid-cols-1 gap-4">
        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h2 class="text-3xl lg:text-4xl font-bold text-blue-400 mb-2" id="totalIncidents">0</h2>
          <p class="text-gray-300">Total Incidents</p>
        </div>
        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h2 class="text-3xl lg:text-4xl font-bold text-red-400 mb-2" id="severeIncidents">0</h2>
          <p class="text-gray-300">Severe Incidents</p>
        </div>
      </div>

      <!-- Date Range Selector -->
      <div class="lg:col-span-9 bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
          <div>
            <h2 class="text-xl font-semibold text-white mb-2">Analysis Period</h2>
            <p class="text-gray-400" id="dateRange">Loading date range...</p>
          </div>
          <div class="flex flex-col sm:flex-row gap-2">
            <input type="date" id="startDate" class="bg-slate-700 text-white px-3 py-2 rounded border border-slate-600">
            <input type="date" id="endDate" class="bg-slate-700 text-white px-3 py-2 rounded border border-slate-600">
          </div>
        </div>
      </div>

      <!-- Filters Section -->
      <div class="lg:col-span-3">
        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h3 class="text-lg font-semibold text-white mb-4">Analysis Filters</h3>

          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Severity Level</label>
              <select class="w-full bg-slate-700 text-white rounded border border-slate-600 px-3 py-2" id="severityFilter">
                <option value="all">All Levels</option>
                <option value="severe">Severe</option>
                <option value="minor">Minor</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-300 mb-1">Time Period</label>
              <select class="w-full bg-slate-700 text-white rounded border border-slate-600 px-3 py-2" id="timeFilter">
                <option value="all">All Times</option>
                <option value="morning">Morning (6AM-12PM)</option>
                <option value="afternoon">Afternoon (12PM-6PM)</option>
                <option value="evening">Evening (6PM-12AM)</option>
                <option value="night">Night (12AM-6AM)</option>
              </select>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Charts Section -->
      <div class="lg:col-span-9 grid gap-4">
        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h3 class="text-xl font-semibold text-white mb-3">Incident Distribution</h3>
          <div class="h-[300px] lg:h-[400px]">
            <canvas id="incidentTypesChart"></canvas>
          </div>
        </div>

        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h3 class="text-xl font-semibold text-white mb-3">24-Hour Distribution</h3>
          <div class="h-[250px] lg:h-[300px]">
            <canvas id="hourlyDistributionChart"></canvas>
          </div>
        </div>
      </div>

      <!-- Bottom Row Charts -->
      <div class="lg:col-span-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h3 class="text-xl font-semibold text-white mb-3">Severity Analysis</h3>
          <div class="h-[250px] lg:h-[300px]">
            <canvas id="severityChart"></canvas>
          </div>
        </div>

        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl">
          <h3 class="text-xl font-semibold text-white mb-3">Monthly Trends</h3>
          <div class="h-[250px] lg:h-[300px]">
            <canvas id="monthlyTrendChart"></canvas>
          </div>
        </div>

        <div class="bg-slate-800 p-4 lg:p-6 rounded-lg shadow-xl md:col-span-2 lg:col-span-1">
          <h3 class="text-xl font-semibold text-white mb-3">Geographic Distribution</h3>
          <div id="heatmap" class="h-[250px] lg:h-[300px] rounded"></div>
        </div>
      </div>
    </div>
  </div>
</div>