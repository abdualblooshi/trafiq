<div class="sidebar bg-gray-900 fixed h-full overflow-auto w-64 z-40">
  <div class="p-4">
    <h1 id="trafiq" class="text-xl font-bold mb-6">TrafiQ</h1>

    <div class="space-y-4">
      <!-- Overview Dropdown -->
      <div class="dropdown">
        <button data-dropdown="overview" class="w-full flex justify-between items-center p-2 hover:bg-gray-700 rounded <%= active === 'overview' ? 'bg-gray-700' : '' %>">
          <span>Overview</span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <div id="overview-dropdown" class="dropdown-content pl-4 space-y-2 mt-2">
          <a href="/" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Summary</a>
          <a href="/statistics" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Statistics</a>
        </div>
      </div>

      <!-- Time Analysis Dropdown -->
      <div class="dropdown">
        <button data-dropdown="time" class="w-full flex justify-between items-center p-2 hover:bg-gray-700 rounded <%= active === 'time' ? 'bg-gray-700' : '' %>">
          <span>Time Analysis</span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <div id="time-dropdown" class="dropdown-content pl-4 space-y-2 mt-2">
          <a href="/daily" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Daily Patterns</a>
          <a href="/weekly" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Weekly Trends</a>
        </div>
      </div>

      <!-- Location Dropdown -->
      <div class="dropdown">
        <button data-dropdown="location" class="w-full flex justify-between items-center p-2 hover:bg-gray-700 rounded <%= active === 'location' ? 'bg-gray-700' : '' %>">
          <span>Location</span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <div id="location-dropdown" class="dropdown-content pl-4 space-y-2 mt-2">
          <a href="/heatmap" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Heat Map</a>
          <a href="/clusters" class="block p-2 hover:bg-gray-700 rounded transition-colors duration-200">Clusters</a>
        </div>
      </div>

      <!-- Settings Dropdown -->
      <div class="dropdown">
        <button data-dropdown="settings" class="w-full flex justify-between items-center p-2 hover:bg-gray-700 rounded">
          <span>Settings</span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <div id="settings-dropdown" class="dropdown-content pl-4 space-y-2 mt-2">
          <button id="accessibility-settings" class="block w-full text-left p-2 hover:bg-gray-700 rounded transition-colors duration-200">
            Accessibility
          </button>
          <button id="map-settings" class="block w-full text-left p-2 hover:bg-gray-700 rounded transition-colors duration-200">
            Map Display
          </button>
        </div>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="mt-8">
      <h2 class="text-lg font-semibold mb-4">Filters</h2>
      <div id="filters" class="space-y-4">
        <!-- Filters will be inserted here by JavaScript -->
      </div>
    </div>
  </div>
</div>